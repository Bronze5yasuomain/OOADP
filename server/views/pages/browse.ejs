<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <% include ../partials/stylesheet %>
</head>

<body>
    <% include ../partials/headerafterlogin %>
        <h1 style="position: relative; left:100px">Items for Sale</h1>
        <div class="container">
            <div class="row">
                <% itemList.forEach(function(itemList) { %>
                        <a href="/item" class="individualitem">
                            <div class="col-sm-6 col-md-4">
                                <div class="thumbnail" data-id="<%= itemList.id%>">
                                    <div class="caption">
                                            <img src="images/itemimages/nikefreern.webp" alt="error"/>
                                        <h4 class="category" style="font-weight: bold">
                                            <%= itemList.name %>
                                        </h4>
                                        <p class="name">
                                            <%= itemList.category %>
                                        </p>
                                        
                                        <div class="clearfix">
                                            <div class="price pull-left">
                                                <span>
                                                    $
                                                    <%= itemList.price %>
                                                </span>
                                            </div>
                                        </div>
                                        <p class="condition">
                                            Condition: <%= itemList.condition %>
                                        </p>
                                        <p class="quantity_left">
                                            Quantity Left: <%= itemList.quantity_left %>
                                        </p>
                                        <p class="seller_id">
                                            Seller ID: <%= itemList.seller_id %>
                                        </p>
                                        <div>
                                            <a href="/transaction/<%= itemList.id%>" class="btn btn-success" role="button">Pay now $
                                                <%= itemList.price%>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    <% }); %>
                        </div>
            </div>
        </div>
        <% include ../partials/footer %>
            <% include ../partials/javascript %>
</body>

</html>