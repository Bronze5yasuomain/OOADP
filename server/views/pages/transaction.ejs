<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <% include ../partials/stylesheet %>
</head>
<body>
    <% include ../partials/headerafterlogin %>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                <h1>Check Payment Details</h1>
                <form action="/pay" method="post" id="transaction-form">
                    <% for(var t=0; t < transactionList.length; t++) { %>
                    <h3>Your Amount to Pay: <strong>$<%= transactionList[t].price%></strong></h3>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label name="buyer_id">Buyer ID</label>
                                <%= transactionList[t].buyer_id%>       
                            </div>
                        </div>  
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label name="item-id">Item ID</label>
                                <%= transactionList[t].item_id%>
                            </div>
                        </div>  
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label name="name">Name</label>
                                <%= transactionList[t].name%>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label name="card-name">Card Holder Name</label>
                                <%= transactionList[t].name_on_card%>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label name="card-number">Credit Card Number</label>
                                <%= transactionList[t].card_number%>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label name="card-expiry-month">Expiration Month</label>
                                        <%= transactionList[t].expiry_month%>
                                    </div>
                                </div>  
                                <div class="col-xs-6">
                                    <div class="form-group">     
                                        <label name="card-expiry-year">Expiration Year</label>
                                        <%= transactionList[t].expiry_year%>   
                                    </div>
                                </div>
                            </div>
                        </div>   
                        <div class="col-xs-12">
                            <div class="form-group"> 
                                <label name="card-cvc">CVC</label>
                                <%= transactionList[t].cvc%>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group"> 
                                <label name="price">Price of item:</label>
                                <%= transactionList[t].price%> 
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <button type="submit" class="btn btn-success">Buy now</button>
                    <br><br>
                </form>
            </div>
        </div>    
    </div>
    <% include ../partials/footer %>
    <% include ../partials/javascript %>
</body>    
