<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <!-- <% include ../partials/stylesheet %> -->
    <!-- <% include ../partials/javascript %> -->
</head>
<body>
    <!-- <% include ../partials/headerafterlogin %> -->
    
<table class="table" style="padding-top: 300px">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Item Name</th>
        <th>Item ID</th>
        <th>Item Price</th>
        <th>Quantity</th>
        <th>Seller ID</th>
        <th>Buyer ID</th>
      </tr>
      <% orderList.forEach(function(orderList){ %>
        <tr class="rowRecord" data-id="<%= orderList.id %>">
          <td>
            <%= orderList.Order_id %>
          </td>
          <td>
            <%= orderList.Item_Name %>
          </td>
          <td>
            <%= orderList.ItemId %>
          </td>
          <td>
            <%= orderList.Item_Price %>
          </td>
          <td>
            <%= orderList.Quantity %>
          </td>
          <td>
            <%= orderList.Seller_id %>
          </td>
          <td>
            <%= orderList.Buyer_id %>
          </td>
          <td>
            <input type="button" class="deleteBtn"  value="Delete">
          </td>
        </tr>
        <% }) %>
    </thead>
  </table>
  <script>
    $('.deleteBtn').click(function () {
      var record_num = $(this).closest("tr").data('id');
      $.ajax({
        url: '<%-urlPath%>' + record_num,
        type: 'DELETE',
        success: function (result) {
          console.log(result.message);
          var itemToRemove = '.rowRecord[data-id=' + record_num + ']';
          $(itemToRemove).remove();
        },
        error: function (result) {
          alert("Unable to delete student record.");
          console.log(result.message);
        }
      });
    });
  </script>
</body>
</html>